<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestLogin.View.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to SimDESK Mobile Apps!" FontSize="Medium"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Label x:Name="usernamelbl" Text="Insert Username" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Entry x:Name="usernametxt"  />
            <Label x:Name="passwordlbl" Text="Insert Password" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Entry x:Name="passwordtxt" IsPassword="True" />
            <Button x:Name="loginbtn" Text="Login" Clicked="loginbtn_Clicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>